#!/usr/bin/env python
#SCsub

Import("env")
env.add_source_files(env.modules_sources,"*.cpp")
mysql_env = env.Clone()

# Get Godot Version
version_file = open('../../version.py', 'r')
for ver in version_file:
	if ver.startswith("major"):
		if ver.count("4") > 0:
			mysql_env.Append(CPPDEFINES=["GODOT4"])	
version_file.close()


if env["platform"] in ["windows", "osx", "UWP", "uwp"]:   # Boost library are required.
	# Enter with the path to the connector here.
	env.Append(LIBPATH=["C:/MY/PATH/TO/mysql-connector-c++/include/jdbc"])
	env.Append(CPPPATH=["C:/MY/PATH/TO/mysql-connector-c++/include/jdbc"])
	
	# Enter with the path to boost library here.
	env.Append(LIBPATH=["C:/MY/PATH/TO/boost"])
	env.Append(CPPPATH=["C:/MY/PATH/TO/boost"])
	
	# Enter with the path to file "libmysqlcppconn.windows.tools.64.lib" here -- Not sure if it required on OSX
	env.Append(LIBPATH=["C:/MY/PATH/TO/mysql-connector-c++/lib"])
	env.Append(LIBS=["mysqlcppconn"])



else:
	mysql_env.Append(LIBPATH=["/usr/lib"])	# Path to libraries
	env.Append(LIBS=["libmysqlcppconn"])










